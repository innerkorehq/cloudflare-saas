# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_ZONE_ID=your-zone-id-here

# R2 Storage Configuration
R2_ACCESS_KEY_ID=your-r2-access-key-here
R2_SECRET_ACCESS_KEY=your-r2-secret-key-here
R2_BUCKET_NAME=yourplatform-sites
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Platform Configuration
PLATFORM_DOMAIN=yourplatform.com
WORKER_SCRIPT_NAME=site-router
INTERNAL_API_KEY=your-internal-api-key-here

# Logging Configuration
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log formats: simple, detailed, json
LOG_FORMAT=detailed
# Optional: path to log file (leave empty for no file logging)
LOG_FILE=
# Enable console logging (true/false)
ENABLE_CONSOLE_LOGGING=true

# Database Configuration (Optional - for PostgreSQL storage)
DATABASE_URL=postgresql://user:password@localhost:5432/cloudflare_saas

# Feature Flags
ENABLE_CUSTOM_HOSTNAMES=true